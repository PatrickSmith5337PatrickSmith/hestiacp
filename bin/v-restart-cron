#!/bin/bash
# info: restart cron service
# options: NONE
#
# The function tells crond service to reread its configuration files.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Includes
source $VESTA/conf/vesta.conf
source $VESTA/func/main.sh


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

if [ ! -z "$CRON_SYSTEM" ]; then
    /etc/init.d/$CRON_SYSTEM status >/dev/null 2>&1
    if [ $? -eq 0 ]; then
        /etc/init.d/$CRON_SYSTEM reload >/dev/null 2>&1
        if [ $? -ne 0 ]; then
            exit $E_RESTART
        fi
    else
        /etc/init.d/$CRON_SYSTEM start >/dev/null 2>&1
        if [ $? -ne 0 ]; then
            exit $E_RESTART
        fi
    fi
fi


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

exit
