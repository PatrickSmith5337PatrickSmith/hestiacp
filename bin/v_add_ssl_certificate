#!/bin/bash
# info: adding ssl certificate

#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument defenition
user=$1
cert=$2

# Importing variables
source $VESTA/conf/vars.conf
source $V_FUNC/shared.func
source $V_FUNC/cert.func

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

# Checking arg number
check_args '2' "$#" 'user certificate'

# Checking argument format
format_validation 'user' 'certificate'

# Checking user
is_user_valid

# Checking user is active
is_user_suspended

# Checking certificate name
is_cert_free

# Checking template
is_cert_valid "$V_TMP"


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Adding certificate to user dir
mv $V_TMP/$cert.crt $V_USERS/$user/cert/
mv $V_TMP/$cert.key $V_USERS/$user/cert/


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

# Logging
log_history "$V_EVENT" "v_del_ssl_certificate $user $cert"
log_event 'system' "$V_EVENT"

exit
