#!/bin/bash
# info: update domains statistics
# options: user
#
# The function runs log analyzer usage for all user webdomains.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument defenition
user=$1

# Importing variables
source $VESTA/conf/vesta.conf
source $VESTA/func/shared.sh
source $VESTA/func/domain.sh


#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

# Checking arg number
check_args '1' "$#" 'user'

# Checking argument format
validate_format 'user'

# Checking web system is enabled
is_system_enabled 'WEB_SYSTEM'

# Checking user
is_object_valid 'user' 'USER' "$user"


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Defining fileds to select
field='$DOMAIN'
conf="$USER_DATA/web.conf"
search_string="SUSPENDED='no'"

# Parsing domain list
domains=$(dom_clear_search)

# Starting upd loop
for domain in $domains; do
    stats=$(get_domain_value 'web' '$STATS')
    if [ ! -z "$stats" ]; then
        $BIN/v_update_web_domain_stat "$user" "$domain"
        rv="$?"
        if [ "$rv" -ne '0' ]; then
            log_event 'debug' "$rv $EVENT"
            exit $rv
        fi
    fi
done


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

# Logging
log_event "$OK" "$EVENT"

exit
