#!/bin/bash
# info: delete dns domains
# options: user
#
# The function for deleting all users DNS domains.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument defenition
user=$1

# Importing variables
source $VESTA/conf/vars.conf
source $V_CONF/vesta.conf
source $V_FUNC/shared.func
source $V_FUNC/domain.func


#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

# Checking arg number
check_args '1' "$#" 'user'

# Checking argument format
format_validation 'user'

# Checking web system is enabled
is_system_enabled 'DNS_SYSTEM'

# Checking user
is_user_valid


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Defining config
conf="$V_USERS/$user/dns.conf"

# Defining fileds to select
field='$DOMAIN'

# Defining search string
search_string="SUSPENDED='no'"

# Parsing domain list
domains=$(dom_clear_search)

# Starting delete loop
for domain in $domains; do
    $V_BIN/v_delete_dns_domain "$user" "$domain"
    rv="$?"
    if [ "$rv" -ne '0' ]; then
        log_event 'debug' "$rv $V_EVENT"
        exit $rv
    fi
done


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

# Logging
log_event 'system' "$V_EVENT"

exit
