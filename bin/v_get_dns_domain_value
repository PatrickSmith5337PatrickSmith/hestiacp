#!/bin/bash
# info: get dns domain value
# options: user domain key
#
# The function for getting a certain DNS domain parameter.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument defenition
user=$1
domain=$(idn -t --quiet -u "$2" )
domain_idn=$(idn -t --quiet -a "$domain")
key=$(echo "$3"| tr '[:lower:]' '[:upper:]'|sed -e "s/^/$/")

# Importing variables
source $VESTA/conf/vesta.conf
source $VESTA/func/shared.sh
source $VESTA/func/domain.sh


#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

# Checking args
check_args '3' "$#" 'user domain key'

# Checking argument format
validate_format 'user' 'domain'

# Checking user
is_object_valid 'user' 'USER' "$user"

# Checking domain exist
is_domain_valid 'dns'

# Checking domain is not suspened
is_domain_suspended 'dns'


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Checking key
value=$(get_domain_value 'dns' "$key")

# Printing value
echo "$value"


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

# Logging
log_event "$OK" "$EVENT"

exit 
