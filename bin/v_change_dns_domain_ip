#!/bin/bash
# info: change dns domain ip address
# options: user domain ip
#
# The function for changing the main ip of DNS zone.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument defenition
user=$1
domain=$(idn -t --quiet -u "$2" )
domain_idn=$(idn -t --quiet -a "$domain")
ip=$3

# Importing variables
source $VESTA/conf/vesta.conf
source $VESTA/func/shared.sh
source $VESTA/func/domain.sh

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

# Checking arg number
check_args '3' "$#" 'user domain ip'

# Checking argument format
validate_format 'user' 'domain' 'ip'

# Checking web system is enabled
is_system_enabled 'DNS_SYSTEM'

# Checking user
is_object_valid 'user' 'USER' "$user"

# Checking user is active
is_object_suspended 'user' 'USER' "$user"

# Checking domain exist
is_domain_valid 'dns'

# Checking domain is not suspened
is_domain_suspended 'dns'


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Get old ip
old_ip=$(get_domain_value 'dns' '$IP')

# Changing ip
update_domain_value 'dns' '$IP' "$ip"

# Changing records
sed -i "s/$old_ip/$ip/g" $USER_DATA/dns/$domain

# Updating zone
update_domain_zone


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

# Adding task to the vesta pipe
$BIN/v_restart_dns

# Logging
log_history "$EVENT" "$SCRIPT $user $domain $old_ip"
log_event "$OK" "$EVENT"

exit
