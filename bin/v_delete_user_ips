#!/bin/bash
# info: delete user ips
# options: user
#
# The function deletes all user's ip addresses.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument defenition
user=$1

# Importing variables
source $VESTA/conf/vars.conf
source $V_CONF/vesta.conf
source $V_FUNC/shared.func
source $V_FUNC/ip.func


#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

# Checking arg number
check_args '1' "$#" 'user'

# Checking argument format
format_validation 'user'

# Checking user
is_user_valid

# Checking user is active
is_user_suspended

# Checking user vesta
if [ "$user" = 'admin' ]; then
    exit
fi

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Parsing user ips
ip_list=$(grep -H "OWNER='$user'" $V_IPS/* | cut -f 1 -d:)

for ip in $ip_list; do 
    ip=$(basename $ip)

    # Checking webdomains and users
    is_ip_key_empty '$U_WEB_DOMAINS'
    is_ip_key_empty '$U_SYS_USERS'

    # Assig ip to main account
    update_sys_ip_value '$OWNER' 'admin'
    update_sys_ip_value '$STATUS' 'exclusive'
    increase_user_value 'admin' '$IP_OWNED'
    increase_user_value 'admin' '$IP_AVAIL'
done


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

# Logging
log_event 'system' "$V_EVENT"

exit
