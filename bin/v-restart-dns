#!/bin/bash
# info: restart dns service
# options: NONE
#
# The function tells BIND service to reload dns zone files.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Includes
source $VESTA/conf/vesta.conf
source $VESTA/func/main.sh


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

if [ ! -z "$DNS_SYSTEM" ]; then
    /etc/init.d/$DNS_SYSTEM status >/dev/null 2>&1
    if [ $? -eq 0 ]; then
        /etc/init.d/$DNS_SYSTEM reload >/dev/null 2>&1
        if [ $? -ne 0 ]; then
            exit $E_RESTART
        fi
    else
        /etc/init.d/$DNS_SYSTEM start >/dev/null 2>&1
        if [ $? -ne 0 ]; then
            exit $E_RESTART
        fi
    fi
fi


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

exit
