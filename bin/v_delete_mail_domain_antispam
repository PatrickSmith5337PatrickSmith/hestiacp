#!/bin/bash
# info: delete mail domain antispam support
# options: user domain
#
# The function disable spamassasin for incomming emails.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument defenition
user=$1
domain=$(idn -t --quiet -u "$2" )
domain=$(echo $domain | tr '[:upper:]' '[:lower:]')
domain_idn=$(idn -t --quiet -a "$domain")

# Importing variables
source $VESTA/conf/vesta.conf
source $VESTA/func/shared.sh
source $VESTA/func/domain.sh


#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

# Checking arg number
check_args '2' "$#" 'user domain'

# Checking argument format
validate_format 'user' 'domain'

# Checking dns system is enabled
is_system_enabled 'MAIL_SYSTEM'

# Checking user
is_object_valid 'user' 'USER' "$user"

# Checking user is active
is_object_unsuspended 'user' 'USER' "$user"

# Checking domain
is_domain_valid 'mail'

# Checking domain is not suspened
is_domain_suspended 'mail'

# Checking current value
is_domain_value_exist 'mail' '$ANTISPAM'


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Delete antispam key
sed -i "/antispam/d" $HOMEDIR/$user/conf/mail/$domain/protection


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

# Delete antispam in config
update_domain_value 'mail' '$ANTISPAM' 'no'

# Logging
log_history "$EVENT" "v_add_mail_domain_antispam $user $domain"
log_event "$OK" "$EVENT"

exit
